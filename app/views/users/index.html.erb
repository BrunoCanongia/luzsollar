<div class='uk-container uk-container-center uk-margin-top'>
	<h1 class='uk-margin-top'>Lista de Usu√°rios</h1>

	<table class='uk-table uk-table-hover uk-table-striped'>
		<thead>
			<th>NOME</th>
			<th>ACESSO</th>
			<th class='uk-text-center'>EDITAR</th>
		</thead>
		<tbody>
			<% @users.each do |u| %>
				<tr>
					<td><%= u.name %></td>
					<td><%= u.card.card %></td>
					<td class='uk-text-center'><%=link_to edit_user_path(u) do%> <i class='uk-icon-edit'></i> <% end %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<br/>

	<%= link_to new_user_path(), class: "uk-button uk-button-primary" do %><i class='uk-icon-user'></i>&nbsp;CADASTRAR NOVO<% end %>
	<br/><br/>
	<%= paginate @users %>
</div>