<div class="spacer"></div>
<div class='uk-container uk-container-center uk-margin-top'>
	<h1 class='uk-margin-top' style='color: <%=@cor_destaque%>'><%= @titulo %></h1>
	<br/>
	<div class='uk-grid uk-margin-top'>
		<div class='uk-width-1-1 uk-width-medium-3-4'>
			<div class='uk-grid' data-uk-grid-margin>

				<% @produtos.each do |p|%>
				<div class='uk-width-1-1 uk-width-medium-1-2 uk-width-large-1-3 uk-text-center'>
					<div class='uk-width-1-1'>
						<%= link_to p do %>
							<% if p.fotos.count >= 1 %>
								<% p.fotos.each do |f| %>
									<% if f.principal %>
										<%= image_tag f.avatar.url(:medium) %>
									<% end %>
								<% end %>
								
							<% else %>
								<%= image_tag 'prod-default.png' %>
							<% end %>
						<% end %>
						<div class='card-desc'><h3 style='color: <%=@cor_destaque%>'><%= p.modelo.modelo %></h3></div>
						<div class='card-campos'><%= p.potencia %></div>
						<div class='card-campos'><%= p.cor %></div>
						<div class='card-campos'><%= p.tensao %></div>
					</div>
				</div>
				<% end %>

			</div>
			<br/>
			<br/>
		</div>


		<div class='uk-width-1-1 uk-width-medium-1-4'>
			<%= render 'sidebar_produtos' %>

			<br/><br/>
			<% if current_user %>
			<%= link_to new_produto_path(), class: "uk-button uk-button-large uk-button-success" do %><i class='uk-icon-lightbulb-o'></i>&nbsp;NOVO PRODUTO<% end %>
			<br/><br/>
			<% end %>

		</div>
	</div>

	
	<%= paginate @produtos %>
</div>