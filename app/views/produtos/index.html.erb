<div class='uk-container uk-container-center uk-margin-top'>
	<h1 class='uk-margin-top' style='color: <%=@cor_destaque%>'><%= @titulo %></h1>
	<div class='uk-grid uk-margin-top'>
		<div class='uk-width-1-1 uk-width-small-3-4'>
			<div class='uk-grid uk-grid-divider' data-uk-grid-margin>

				<% @produtos.each do |p|%>
				<div class='uk-width-1-1 uk-width-small-1-2 uk-width-medium-1-3 uk-text-center'>
					<div class='uk-width-1-1'>
						<%= link_to p do %>
							<%= image_tag p.fotos.first.avatar.url(:medium) %>
						<% end %>
						<div class='card-desc'><h3 style='color: <%=@cor_destaque%>'><%= p.modelo.modelo %></h3></div>
						<div class='card-campos'><%= p.potencia %></div>
						<div class='card-campos'><%= p.cor %></div>
						<div class='card-campos'><%= p.tensao %></div>
					</div>
				</div>
				<% end %>

			</div>
			<br/>
			<br/>
		</div>


		<div class='uk-width-1-1 uk-width-small-1-4'>
			<%= render 'sidebar_produtos' %>

			<br/><br/>
			<% if current_user %>
			<%= link_to new_produto_path(), class: "uk-button" do %><i class='uk-icon-lightbulb-o'></i>&nbsp;NOVO PRODUTO<% end %>
			<br/><br/>
			<% end %>

		</div>
	</div>

	
	<%= paginate @produtos %>
</div>