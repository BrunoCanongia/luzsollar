<div class='uk-container uk-container-center uk-margin-top'>
	<h1 class='uk-margin-top'>Produtos</h1>
	
	<div class='uk-grid'>
		<div class='uk-width-3-4'>
			<div class='uk-grid' data-uk-grid-margin>

				<% @produtos.each do |p|%>
				<div class='uk-width-1-3 uk-text-center'>
					<div class='uk-width-1-1'>
						<%= image_tag p.fotos.first.avatar.url(:medium) %>
						<div class='card-desc'><h3><%= p.categoria.categoria %>&nbsp;-&nbsp;<%= p.modelo.modelo %></h3></div>
						<div class='card-campos'><%= p.potencia %></div>
						<div class='card-campos'><%= p.cor %></div>
						<div class='card-campos'><%= p.tensao %></div>
					</div>
				</div>
				<% end %>

			</div>
			<br/>
			<br/>
		</div>


		<div class='uk-width-1-4'>
			<ul class="uk-nav uk-nav-side">
			    <li><a href="">Super LED</a></li>
			    <li class="uk-active"><a href="">LED</a></li>
			    <li><a href="">LUMIN√ÅRIAS</a></li>
			    <li><a href="">REFLETORES</a></li>
			</ul>

			<br/><br/>

			<%= link_to new_produto_path(), class: "uk-button uk-button-primary" do %><i class='uk-icon-lightbulb-o'></i>&nbsp;NOVO PRODUTO<% end %>
			<br/><br/>

		</div>
	</div>

	
	<%= paginate @produtos %>
</div>